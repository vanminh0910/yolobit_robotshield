<xml xmlns="https://developers.google.com/blockly/xml" id="toolbox" style="display: none">
  <category id="move" name="ROBOTSHIELD" colour="#00CEB9" icon="robot">
    <block type="robotshield_move_delay">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
      <value name="time">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
    </block>
    <block type="robotshield_move">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
    </block>
    <block type="robotshield_motor_speed">
      <value name="left_wheel_speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
      <value name="right_wheel_speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
      <value name="time">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
    </block>
    <block type="robotshield_stop" />
    <block type="robotshield_servo_position">
      <value name="angle">
        <shadow type="math_number">
          <field name="NUM">90</field>
        </shadow>
      </value>
    </block>
    <block type="robotshield_servo270_position">
      <value name="angle">
        <shadow type="math_number">
          <field name="NUM">270</field>
        </shadow>
      </value>
    </block>
    <block type="robotshield_servo_rotate">
        <value name="change">
          <shadow type="math_number">
            <field name="NUM">1</field>
          </shadow>
        </value>
        <value name="speed">
          <shadow type="math_number">
            <field name="NUM">10</field>
          </shadow>
        </value>
        <value name="limit">
          <shadow type="math_number">
            <field name="NUM">180</field>
          </shadow>
        </value>
    </block>
    <block type="robotshield_servo270_rotate">
        <value name="change">
          <shadow type="math_number">
            <field name="NUM">1</field>
          </shadow>
        </value>
        <value name="speed">
          <shadow type="math_number">
            <field name="NUM">10</field>
          </shadow>
        </value>
        <value name="limit">
          <shadow type="math_number">
            <field name="NUM">270</field>
          </shadow>
        </value>
    </block>
    <block type="robotshield_servo360_spin">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">100</field>
        </shadow>
      </value>
    </block>
    <block type="robotshield_servo_read_position" />
  </category>
</xml>